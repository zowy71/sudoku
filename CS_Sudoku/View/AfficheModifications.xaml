<Window x:Class="CS_Sudoku.View.AfficheModifications"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS_Sudoku.View"
        mc:Ignorable="d"
        Title="AfficheModifications" Height="450" Width="800" Icon="/CS_Sudoku;component/Images/sudoku_64.png">
    <Grid>
        <Rectangle Fill="#FFF4F4F5" Margin="10,10,9.8,23" Stroke="Black"></Rectangle>
        <TextBox x:Name="tbContenu" Margin="20,19,18.8,34" TextWrapping="Wrap" Text="TextBox" FontFamily="Poiret One" AcceptsReturn="True" AutoWordSelection="True" IsReadOnly="True" FontSize="14" VerticalScrollBarVisibility="Auto"/>
        <CheckBox x:Name="cbAfficherModifications" Content="Afficher les modifications" HorizontalAlignment="Left" Margin="10,0,0,2" 
                  Width="195" Height="16" VerticalAlignment="Bottom" IsChecked="{Binding AfficherModifications, Mode=TwoWay}"/>

    </Grid>
</Window>
